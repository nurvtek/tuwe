<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Registro y Test</title>
 
    
    <link href="http://getbootstrap.com/docs/5.0/dist/css/bootstrap.min.css" rel="stylesheet">
 
    <link href="https://v4-alpha.getbootstrap.com/examples/narrow-jumbotron/narrow-jumbotron.css" rel="stylesheet">
    <link href="../static/signup.css" rel="stylesheet">
    <script src='../static/js/jquery-3.6.0.min.js'></script>
    
  </head>
 
  <body>
 
    <div class="container">
      <div class="header">
        <nav>
          <ul class="nav nav-pills pull-right">
            <li role="presentation" ><a href="main">Home</a></li>
            <li role="presentation"><a href="/SignIn">Sign In</a></li>
            <li role="presentation" class="active"><a href="/SignUp">Sign Up</a></li>
          </ul>
        </nav>
        <h3 class="text-muted">Evaluar Seguridad Datos Personales</h3>
      </div>
 
      <div class="jumbotron">
        <h1>Registro</h1>
        <form class="form-signin">
        <label for="enunciado" class="sr-only">Enunciado Respuesta</label>
        <input type="name" name="enunciado" id="enunciado" class="form-control" placeholder="Respuesta" required autofocus>
        <label for="ponderacion" class="sr-only">Ponderacion</label>
        <input type="number" name="ponderacion" id="ponderacion" class="form-control"  required autofocus>
        
        <br>
        <button id="btnSignUp" class="btn btn-lg btn-primary btn-block" type="button">Salvar</button>
        <div id="base"></div>
      </form>
      </div>
 
       
 
      <footer class="footer">
        <p>&copy; Tuwe 2015</p>
      </footer>
 
    </div>

    <script type="text/javascript">
        $(document).ready(function() {
            $('#btnSignUp').click(function() {
         
                $.ajax({
                    url: '/signUp',
                    data: $('form').serialize(),
                    type: 'POST',
                    success: function(response) {
                        var data = response;

                        var parsed = JSON.parse(data);

                        document.getElementById('base').innerHTML = parsed.html;
                        console.log(response);
                    },
                    error: function(error) {
                        console.log(error);
                    }
                });
            });
        });
    </script>
  </body>
</html>